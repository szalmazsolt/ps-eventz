<% @events.each do |event| %>
  <section class="event">
    <div class="image">
      <%= image_tag event.image_file_name, alt: "Event image", title: "Event image" %>
    </div>
    <div class="summary">
      <h2>
        <%= link_to event.name, event %>
      </h2>
      <h3><%= format_datetime(event) %> in <%= event.location %></h3>
      <span class="price">
        <%= price_or_free(event) %>
      </span>
      <p><%= truncate(event.description, length: 30, separator: ' ') %></p>
    </div>
  </section>
<% end %>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Add New Event", new_event_path, class: "button" %>
  </section>
<% end %>
